<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/info_window_background"
    android:padding="16dp">

    <!-- TITLE -->
    <TextView
        android:id="@+id/tv_closure_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Road Closure"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        tools:text="Road Closure - ABC123" />

    <!-- END DATE -->
    <TextView
        android:id="@+id/tv_closure_enddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@android:color/darker_gray"
        tools:text="Until: 2025-11-19" />

    <!-- DESCRIPTION -->
    <TextView
        android:id="@+id/tv_closure_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/darker_gray"
        tools:text="Construction road closure" />

    <!-- BUTTONS -->
    <Button
        android:id="@+id/btn_closure_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="Modify End Date"
        style="?attr/materialButtonOutlinedStyle"
        app:strokeColor="#FE2C55"
        android:textColor="#FE2C55"
        android:visibility="gone"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btn_closure_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="Delete Closure"
        android:textColor="@android:color/white"
        android:backgroundTint="#FE2C55"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>
