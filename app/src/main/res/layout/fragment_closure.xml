<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_corners">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Closure Details"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:paddingStart="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/iv_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        map:cardCornerRadius="20dp"
        map:cardElevation="6dp"
        map:cardUseCompatPadding="true">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapViewClosure"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvClosureDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Closure Details..."
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:paddingBottom="6dp"
        android:paddingStart="14dp"/>



</LinearLayout>
